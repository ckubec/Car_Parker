<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ckubec.tacoma.uw.edu.carparker.MainActivityFragment"
    tools:showIn="@layout/activity_main"
    android:gravity="center_vertical">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:id="@+id/imageView"
            android:layout_gravity="center_horizontal"
            android:layout_margin="15dp"
            android:src="@drawable/logo" />

        <!--<Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/parkingListButton"
            android:onClick="aboutScreen"
            android:layout_gravity="center_horizontal" />-->

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/parkingListButton"
        android:onClick="ListAllSpaces"
        android:id="@+id/btnAllSpots"
        android:layout_gravity="center_horizontal" />

    <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/find_spot"
            android:onClick="find"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/reserve_spot"
            android:onClick="reserve"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/free_spot"
            android:onClick="free"
            android:layout_gravity="center_horizontal" />

        <View
            android:layout_width="180dp"
            android:layout_height="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="15dp"
            android:background="@android:color/darker_gray"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/settingsButton"
            android:onClick="settingsMenu"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/aboutButton"
            android:onClick="aboutScreen"
            android:layout_gravity="center_horizontal" />

</LinearLayout>
